    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            // Load profile data
            loadProfileData();

            $('.fa-bars').click(function () {
                $(this).toggleClass('fa-times');
                $('.navbar').toggleClass('nav-toggle');
            });
            
            $(window).on('scroll load', function () {
                $(this).removeClass('fa-times');
                $('.navbar').removeClass('nav-toggle');
                if ($(window).scrollTop() > 30) {
                    $('header').addClass('header-active');
                } else {
                    $('header').removeClass('header-active');
                }
            });
        });

        async function loadProfileData() {
            try {
                const response = await fetch('/employee/profile-data');
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                // Hide loading and show content
                document.getElementById('loading').style.display = 'none';
                document.getElementById('profile-content').style.display = 'block';
                
                // Populate employee details
                document.getElementById('employee-name').textContent = data.employee.name;
                document.getElementById('employee-email').textContent = data.employee.email;
                document.getElementById('employee-mobile').textContent = data.employee.mobile;
                document.getElementById('employee-address').textContent = data.employee.address;
                
                // Populate previous registrations
                populateRegistrations('previous', data.previousRegistrations);
                
                // Populate pending registrations
                populateRegistrations('pending', data.pendingRegistrations);
                
            } catch (error) {
                console.error('Error loading profile data:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('error-message').style.display = 'block';
                document.getElementById('error-message').textContent = 
                    'Failed to load profile data. Please try again later.';
            }
        }

        function populateRegistrations(type, registrations) {
            const container = document.getElementById(`${type}-registrations`);
            
            if (!registrations || registrations.length === 0) {
                container.innerHTML = '<p>No registrations found.</p>';
                return;
            }
            
            if (type === 'previous') {
                const tableHTML = `
                    <table>
                        <thead>
                            <tr>
                                <th>Doctor Name</th>
                                <th>Registration Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${registrations.map(reg => `
                                <tr>
                                    <td>${reg.doctorName}</td>
                                    <td>${reg.registrationDate}</td>
                                    <td>${reg.status}</td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                `;
                container.innerHTML = tableHTML;
            } else if (type === 'pending') {
                const tableHTML = `
                    <table>
                        <thead>
                            <tr>
                                <th>Doctor Name</th>
                                <th>Registration Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${registrations.map(reg => `
                                <tr>
                                    <td>${reg.doctorName}</td>
                                    <td>${reg.registrationDate}</td>
                                    <td>
                                        <button class="action-button approve" onclick="handleApprove('${reg.doctorName}')">Approve</button>
                                        <button class="action-button reject" onclick="handleReject('${reg.doctorName}')">Reject</button>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                `;
                container.innerHTML = tableHTML;
            }
        }

        function handleApprove(doctorName) {
            if (confirm(`Are you sure you want to approve ${doctorName}?`)) {
                // Add your approval logic here
                alert(`Approved ${doctorName}`);
                // You can make another fetch call here to update the status
            }
        }

        function handleReject(doctorName) {
            if (confirm(`Are you sure you want to reject ${doctorName}?`)) {
                // Add your rejection logic here
                alert(`Rejected ${doctorName}`);
                // You can make another fetch call here to update the status
            }
        }

        function closeProfile() {
            window.location.href = "/employee/dashboard";
        }
