    <script>
        let selectedAppointmentCard = null;

        function selectAppointment(appointmentId, patientName, patientEmail, appointmentDate, appointmentTime) {
            // Remove selection from previous card
            if (selectedAppointmentCard) {
                selectedAppointmentCard.classList.remove('selected');
            }

            // Add selection to current card
            const cards = document.querySelectorAll('.appointment-card');
            cards.forEach(card => {
                if (card.onclick.toString().includes(appointmentId)) {
                    card.classList.add('selected');
                    selectedAppointmentCard = card;
                }
            });

            // Update form with appointment details
            document.getElementById('appointmentId').value = appointmentId;
            document.getElementById('selectedPatientName').textContent = patientName;
            document.getElementById('selectedPatientEmail').textContent = patientEmail;
            document.getElementById('selectedAppointmentDate').textContent = new Date(appointmentDate).toLocaleDateString();
            document.getElementById('selectedAppointmentTime').textContent = appointmentTime;

            // Show prescription form
            document.getElementById('prescriptionForm').style.display = 'block';

            // Scroll to form
            document.getElementById('prescriptionForm').scrollIntoView({ behavior: 'smooth' });
        }

        function addMedicine() {
            const container = document.getElementById('medicinesContainer');
            const medicineEntry = document.createElement('div');
            medicineEntry.className = 'medicine-entry';
            medicineEntry.innerHTML = `
                <div class="medicine-row">
                    <input type="text" name="medicineName[]" placeholder="Medicine Name" required>
                    <input type="text" name="dosage[]" placeholder="Dosage" required>
                    <input type="text" name="frequency[]" placeholder="Frequency" required>
                    <input type="text" name="duration[]" placeholder="Duration" required>
                    <input type="text" name="instructions[]" placeholder="Instructions">
                    <button type="button" class="remove-medicine" onclick="removeMedicine(this)">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            container.appendChild(medicineEntry);

            // Enable remove button for first medicine if there are multiple
            if (container.children.length > 1) {
                container.children[0].querySelector('.remove-medicine').disabled = false;
            }
        }

        function removeMedicine(button) {
            const container = document.getElementById('medicinesContainer');
            if (container.children.length > 1) {
                button.closest('.medicine-entry').remove();
                
                // Disable remove button for first medicine if only one remains
                if (container.children.length === 1) {
                    container.children[0].querySelector('.remove-medicine').disabled = true;
                }
            }
        }

        document.getElementById('createPrescriptionForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (!document.getElementById('appointmentId').value) {
                alert('Please select an appointment first');
                return;
            }

            const formData = new FormData(this);
            const medicines = [];
            
            // Collect medicine data
            const medicineNames = formData.getAll('medicineName[]');
            const dosages = formData.getAll('dosage[]');
            const frequencies = formData.getAll('frequency[]');
            const durations = formData.getAll('duration[]');
            const instructions = formData.getAll('instructions[]');

            for (let i = 0; i < medicineNames.length; i++) {
                medicines.push({
                    medicineName: medicineNames[i],
                    dosage: dosages[i],
                    frequency: frequencies[i],
                    duration: durations[i],
                    instructions: instructions[i] || ''
                });
            }

            const prescriptionData = {
                appointmentId: document.getElementById('appointmentId').value,
                age: parseInt(formData.get('age')),
                gender: formData.get('gender'),
                weight: parseFloat(formData.get('weight')),
                symptoms: formData.get('symptoms'),
                medicines: medicines,
                additionalNotes: formData.get('additionalNotes') || ''
            };

            try {
                const response = await fetch('/prescription/doctor/prescriptions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(prescriptionData)
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Prescription created successfully!');
                    window.location.href = '/doctor/prescriptions';
                } else {
                    alert(result.error || 'Failed to create prescription');
                }
            } catch (error) {
                console.error('Error creating prescription:', error);
                alert('Failed to create prescription. Please try again.');
            }
        });
    </script>
</body>
</html>